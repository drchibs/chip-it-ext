{
    "name": "Chip-It!",
    "version": "1.0",
    "description": "A Better Browser Bookmarks manager with a dashboard and more class",
    "manifest_version": 3,

    "permissions": [
        "contextMenus",
        "tabs",
        "bookmarks",
        "storage",
        "notifications"
    ],
    "host_permissions": [
        "https://chip-it-api.fly.dev/v1/chips"
    ],

    "icons": {
        "16": "chip-16.png",
        "48": "chip-48.png",
        "128": "chip-128.png"
    },

    "action": {
        "default_icon": "chip-16.png",
        "default_title": "Chip this page!",
        "default_popup": "popup.html"
    },

    "background": {
        "service_worker": "background.js"
    }
}
